<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Recipes" %>
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-4xl font-bold text-blue-600">Recipes</h1>
  </div>
  <div id="recipes" class="grid grid-cols-1 gap-8 sm:grid-cols-3">
    <% @recipes.each do |recipe| %>
      <div class="max-w-sm overflow-hidden rounded-lg shadow-md">
        <%= link_to recipe do %>
          <% if recipe.image.attached? %>
            <%= image_tag url_for(recipe.image), class: "w-full h-64 object-cover object-center" %>
          <% else %>
            <span class="block w-full h-64 bg-gray-300"></span> <!-- Placeholder for no image -->
          <% end %>
          <div class="p-4">
            <h2 class="mb-2 text-xl font-bold text-gray-800"><%= recipe.title %></h2>
            <p class="text-gray-600"><%= recipe.ingredients %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
